#include<stdio.h>
int main()
{
    printf("Program to perform all arithmetic operations:\n\n");
    
    float value1, value2;
    float sum, differance, product, quotient;
    
    printf("\nFirst Value:");
    scanf("%f", &value1);
    
    printf("\nSecond Value:");
    scanf("%f", &value2);
    
    sum = value1 + value2;
    differance = value1 - value2;
    product = value1 * value2;
    quotient = value1 / value2;
    
    printf("\n\nSum: %f", sum);
    printf("\nDifferance: %f", differance);
    printf("\nProduct: %f", product);
    printf("\nQuotient: %f", quotient);
    
    return 0;
}
