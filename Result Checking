#include<stdio.h>
int main()
{
    int id;
    
    printf("Please enter your Student ID to get your result.");
    printf("\n\nStudent ID: ");
    scanf("%d", &id);
    
if (id == 001)
    {
        printf("\n\nCongratulations, Rehan!");
        printf("\nYour result is: PASS");
        printf("\nYour SGPA is: 4.00");
    }
    
    if (id == 002)
    {
        printf("\n\nSorry, Shahed!");
        printf("\nYour result is: FAIL");
        printf("\nYour SGPA is: 0.00");
    }
    
    if (id == 003)
    {
        printf("\n\nCongratulations, Sunny!");
        printf("\nYour result is: PASS");
        printf("\nYour SGPA is: 3.39");
    }
    
    if (id == 004)
    {
        printf("\n\nCongratulations, Jehad!");
        printf("\nYour result is: PASS");
        printf("\nYour SGPA is: 3.46");
    }
    
    return 0;
}
